<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
app:cardCornerRadius="@dimen/padding_8"
android:padding="@dimen/padding_4"
android:layout_margin="@dimen/padding_8"
>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/item_list"
        android:id="@+id/mainItems"
        android:layout_height="@dimen/item_list"
        android:padding="@dimen/padding_8">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:padding="1dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="IBM"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_baseline_business_center_24"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="@dimen/padding_4"
            android:id="@+id/title"
            android:padding="@dimen/padding_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IBM"
            android:maxLines="1"
            android:textColor="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@+id/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/ds_text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/changesPerc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IBM"
            android:maxLines="1"
            android:textIsSelectable="true"
            android:singleLine="true"
            android:textColor="@color/green"
            android:layout_marginTop="@dimen/padding_4"
            android:marqueeRepeatLimit="marquee_forever"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/ds_text_size_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IBM"
            android:padding="@dimen/padding_4"
            android:gravity="center"
            android:textIsSelectable="true"
            android:layout_marginTop="@dimen/padding_4"
            android:marqueeRepeatLimit="marquee_forever"
            app:layout_constraintTop_toBottomOf="@+id/changesPerc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/ds_text_size_small"
            android:textStyle="normal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>