<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_hieght"
    xmlns:toop="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/padding_8"
    android:padding="@dimen/padding_4"
    android:layout_margin="@dimen/padding_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding_4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                toop:text="MAIN"
                android:textSize="@dimen/ds_text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                toop:text="subtitle"
                android:textSize="@dimen/ds_text_size_medium" />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                toop:text="subtitle"
                android:textSize="@dimen/ds_text_size_small" />

        </LinearLayout>

        <TextView
            android:id="@+id/gain"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="@dimen/ds_text_size_medium"
            android:paddingRight="@dimen/padding_4"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            toop:text="+50.0"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>